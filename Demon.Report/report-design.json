							{ "$ref": "#/definitions/TableLayout" },
							{ "$ref": "#/definitions/PhotoTableLayout" },
							{ "$ref": "#/definitions/PictureLayout" },
							{ "$ref": "#/definitions/LineLayout" },
							{ "$ref": "#/definitions/SpaceLayout" }
						]
					}
