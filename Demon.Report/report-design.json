				"name": { "type": "string" },
				"lineNumber": { "type": "number" },
				"linePosition": { "type": "number" },
				"source": { "$ref": "#/definitions/path" },
				"traceLayout": { "type": "boolean" },
				"traceText": { "type": "boolean" },
				"tracePath": { "type": "boolean" },
				"traceOutline": { "type": "boolean" },
